generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model parcelas {
  id               Int                @id @default(autoincrement())
  id_parcela       Int                @unique
  nombre           String
  ubicacion        String
  responsable      String
  tipo_cultivo     String
  ultimo_riego     DateTime
  latitud          Float
  longitud         Float
  estado           Boolean            @default(true)
  sensores_parcela sensores_parcela[]
  cambios_parcela  cambios_parcela[]
}

model cambios_parcela {
  id             Int      @id @default(autoincrement())
  parcela_id     Int
  cambio_tipo    String
  campo          String
  valor_anterior String?
  valor_nuevo    String?
  registrado_en  DateTime @default(now())

  parcelas parcelas @relation(fields: [parcela_id], references: [id_parcela])
}

model sensores_parcela {
  id            Int      @id @default(autoincrement())
  parcela_id    Int
  humedad       Float
  temperatura   Float
  lluvia        Float
  sol           Float
  registrado_en DateTime @default(now())

  parcelas parcelas @relation(fields: [parcela_id], references: [id_parcela])
}

model Usuario {
  id        Int      @id @default(autoincrement())
  correo    String   @unique
  password  String
  nombre    String?
  creado_en DateTime @default(now())
  actualizado_en DateTime @updatedAt
  securityQuestion String
  securityAnswer   String
}
